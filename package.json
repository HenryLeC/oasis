{
  "name": "oasis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "nohoist": [
    "**"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "all-contributors-cli": "^6.20.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "contrib:add": "all-contributors add",
    "contrib:build": "all-contributors generate",
    "dev:web": "yarn workspace @oasis/web dev",
    "dev:api": "yarn workspace @oasis/api dev",
    "dev:gql": "yarn workspace @oasis/client-gql dev",
    "build": "yarn plugin import workspace-tools && yarn workspaces foreach --exclude=\"@oasis/puppeteer\" -p run build",
    "dev": "run-p -l \"dev:web\" \"dev:api\" \"dev:gql\""
  },
  "dependencies": {
    "apollo-server-micro": "^2.23.0",
    "firebase-admin": "^9.6.0",
    "npm-run-all": "^4.1.5"
  }
}
